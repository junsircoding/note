    "import os\n",
    "import sys\n",
    "\n",
    "\n",
    "# 当前文件绝对路径\n",
    "pwd = os.path.dirname(os.path.abspath(__file__))\n",
    "# 分拆\n",
    "path_list = pwd.split(os.sep)\n",
    "# 取当前目录, 即在路径中去掉当前文件名称\n",
    "path = os.sep.join(path_list[:-1])\n",
    "# 将当前目录加入环境变量\n",
    "sys.path.insert(0, os.path.join(path))"
   ]
